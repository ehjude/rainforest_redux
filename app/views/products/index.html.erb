<h1>All products</h1>
<%= link_to "Create product", new_product_path %>

<br><br>
<%= form_tag products_path, method: :get, authentication: false, id: "search-form" do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search" %>
<% end %>


<h3><small><%= page_entries_info @products %></small></h3>

<table>
	<th>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Price</th>
		</tr>
	</th>
	<tbody id="products">
		<%= render @products %>
		<%# THIS IS THE SAME AS %>
		<%#= render :partial => "product", :collection => @products %>
		<%# Render the partial _product, set product as a local variable, and iterate through the collection @products %>
	</tbody>

	<%= paginate @products %>
</table>

